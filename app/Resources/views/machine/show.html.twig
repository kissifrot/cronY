{% extends 'base.html.twig' %}

{% block body %}
    <h1>Machine {{ machine.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ machine.name }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{% if machine.createdAt %}{{ machine.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ machine.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('machine_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('machine_edit', { 'id': machine.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
